#!/usr/bin/env node

'use strict';

var shell = require('shelljs');

shell.echo('');
shell.echo('Linting...');
shell.echo('');
shell.exec('eslint . --color');

shell.echo('');
shell.echo('Running unit tests...');
shell.echo('');
shell.exec('npm run test -- --colors');

shell.echo('');
shell.echo('Checking for missing or unused dependencies...');
shell.echo('');
shell.exec('depcheck --ignores "eslint-*"');

shell.echo('');
shell.echo('Checking for outdated dependencies...');
shell.echo('');
shell.exec('npm outdated');
